---
// src/layouts/BaseLayout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | TensorFieldX</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
		<script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"
			onload="renderMathInElement(document.body, {
				delimiters: [
					{left: '$$', right: '$$', display: true},
					{left: '$', right: '$', display: false}
				]
			});">
		</script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
	</head>
	
	<body class="bg-void-blue text-white min-h-screen flex flex-col font-mono selection:bg-acid-green selection:text-black">
		
		<div class="fixed inset-0 z-0 opacity-10 pointer-events-none" 
			 style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 40px 40px;">
		</div>

		<nav class="z-50 flex justify-between items-center p-6 border-b border-white/10 backdrop-blur-md sticky top-0 bg-void-blue/80">
    <a href="/tensorfieldx/" class="text-xl font-serif font-bold hover:text-acid-green transition-colors">
        TENSOR_FIELD_X
    </a>
    
    <div class="space-x-6 text-sm font-bold tracking-tight">
        <a href="/tensorfieldx/notes" class="hover:text-acid-green hover:underline decoration-1 underline-offset-4">NOTES</a>
        <a href="/tensorfieldx/projects" class="hover:text-acid-green hover:underline decoration-1 underline-offset-4">PROJECTS</a>
        <a href="/tensorfieldx/about" class="hover:text-acid-green hover:underline decoration-1 underline-offset-4">ABOUT</a>
    </div>
</nav>

		<main class="flex-grow z-10 p-6 md:p-12 max-w-5xl mx-auto w-full">
			<slot />
		</main>

		<footer class="z-10 border-t border-white/10 p-6 text-xs text-center text-gray-500">
			&copy; 2026 MANIFOLD // BUILT WITH ASTRO
		</footer>
	</body>
</html>