---
// src/components/Sidenote.astro
interface Props {
  label?: string;
}

const { label } = Astro.props;
---

<span class="sidenote-wrapper relative inline group">
  
  <sup class="text-concrete font-bold text-[10px] cursor-help border-b border-transparent group-hover:border-accent transition-all top-0">
    {label || 'âŠ•'}
  </sup>

  <span class="
    hidden lg:block
    float-right clear-right
    mr-[-45%] w-[40%]
    text-xs font-mono text-concrete
    text-left leading-relaxed
    border-l border-white/10 pl-3 py-1 mb-2 mt-1
    group-hover:text-ink group-hover:border-accent
    transition-all duration-300
  ">
    <slot />
  </span>

  <span class="lg:hidden block mt-2 mb-4 ml-4 pl-3 border-l-2 border-accent/50 text-xs font-mono text-concrete/80">
    <span class="text-accent font-bold mr-1">NOTE:</span>
    <slot />
  </span>

</span>