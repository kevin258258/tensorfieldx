---
import BaseLayout from '../layouts/BaseLayout.astro';

// 真实联系方式
const contacts = [
    { label: "GitHub", value: "@kevin258258", url: "https://github.com/kevin258258" },
    { label: "Zhihu", value: "Three-23-89", url: "https://www.zhihu.com/people/three-23-89" },
    { label: "Email", value: "12512619@mail.sustech.edu.cn", url: "mailto:12512619@mail.sustech.edu.cn" }
];
---

<BaseLayout title="About">
    
    <div class="max-w-6xl mx-auto px-6 py-20">
        
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 items-start">
            
            <aside class="lg:col-span-5 bg-void border border-white/10 p-8 shadow-2xl">
                
                <div class="font-mono text-[10px] text-concrete mb-8 tracking-widest">
                    // IDENTITY
                </div>

                <div class="w-24 h-24 bg-accent flex items-center justify-center mb-8">
                    <span class="font-serif italic font-bold text-5xl text-black">T</span>
                </div>

                <div class="mb-8">
                    <h1 class="text-4xl font-serif text-white mb-2">Feixiang Tao</h1>
                    <p class="font-mono text-sm text-accent font-bold">CS Freshman @ SUSTech</p>
                </div>

                <div class="w-full h-px bg-white/10 mb-8"></div>

                <div class="space-y-4 font-mono text-xs">
                    <div class="flex justify-between items-baseline">
                        <span class="text-concrete uppercase tracking-wider">Major</span>
                        <span class="text-white text-right">Computer Science</span>
                    </div>
                    <div class="flex justify-between items-baseline">
                        <span class="text-concrete uppercase tracking-wider">Focus</span>
                        <span class="text-white text-right">Physics / Math / AI</span>
                    </div>
                    <div class="flex justify-between items-baseline">
                        <span class="text-concrete uppercase tracking-wider">Loc</span>
                        <span class="text-white text-right">Shenzhen, CN</span>
                    </div>
                </div>

            </aside>

            <main class="lg:col-span-7 flex flex-col justify-center pt-4">
                
                <div class="prose prose-invert prose-lg max-w-none mb-12">
                    <p class="font-serif text-2xl text-ink leading-relaxed mb-6">
                        "Hi, I'm Feixiang. A freshman undergraduate student at <span class="text-accent">SUSTech</span>."
                    </p>
                    
                    <div class="text-concrete text-sm font-mono leading-loose space-y-4">
                        <p>
                            I am currently building my foundational knowledge in Computer Science, while maintaining a strong passion for Physics and Mathematics.
                        </p>
                        <p>
                            This website serves as a personal archive for my undergraduate studies. I use it to document course notes, lab experiments, and my understanding of fundamental theories. 
                        </p>
                        <p>
                            Always learning, always exploring.
                        </p>
                    </div>
                </div>

                <div class="border-t border-white/10 pt-8">
                    <h3 class="font-mono text-xs text-concrete mb-6 flex items-center gap-2">
                        <span class="w-1.5 h-1.5 bg-accent"></span>
                        CONNECT
                    </h3>
                    <div class="space-y-3">
                        {contacts.map(contact => (
                            <a href={contact.url} target="_blank" class="flex items-center justify-between group py-2 hover:bg-white/5 px-2 -mx-2 transition-colors rounded-sm">
                                <span class="font-serif text-lg text-white group-hover:text-accent transition-colors">
                                    {contact.label}
                                </span>
                                <span class="font-mono text-xs text-concrete group-hover:text-white transition-colors">
                                    {contact.value} ↗
                                </span>
                            </a>
                        ))}
                    </div>
                </div>

            </main>
        </div>
    </div>
</BaseLayout>