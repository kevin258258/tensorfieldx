---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allNotes = await getCollection('notes');
const sortedNotes = allNotes.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// 按年份分组
const notesByYear = sortedNotes.reduce((acc, note) => {
    const year = note.data.pubDate.getFullYear();
    if (!acc[year]) acc[year] = [];
    acc[year].push(note);
    return acc;
}, {});

const years = Object.keys(notesByYear).sort((a, b) => b - a);
---

<BaseLayout title="Research Notes">
    <div class="max-w-4xl mx-auto px-6 py-20">
        
        <header class="mb-20">
            <div class="font-mono text-xs text-accent font-bold mb-4 flex items-center gap-2">
                <span class="w-2 h-2 bg-accent"></span>
                /// DATABASE_INDEX
            </div>
            <h1 class="text-5xl md:text-7xl font-serif font-bold text-white tracking-tight mb-6">
                Research <span class="text-accent italic">Notes</span>.
            </h1>
            <p class="text-concrete font-mono text-sm max-w-xl leading-relaxed">
                A chronological archive of derivations, technical analyses, and theoretical explorations in CS and Physics.
            </p>
        </header>

        <div class="space-y-24">
            {years.map(year => (
                <section class="relative border-l border-white/10 pl-8 md:pl-12">
                    <div class="absolute -left-[5px] top-0 w-2 h-2 bg-accent rounded-full"></div>
                    <h2 class="text-2xl font-serif font-bold text-white mb-8 flex items-center">
                        {year} <span class="text-accent ml-2 text-sm font-mono">[{notesByYear[year].length}]</span>
                    </h2>
                    
                    <div class="space-y-12">
                        {notesByYear[year].map(note => (
                            <article class="group relative">
                                <a href={`/notes/${note.slug}`} class="block">
                                    <div class="flex flex-col md:flex-row md:items-baseline gap-2 md:gap-8">
                                        <time class="font-mono text-xs text-concrete min-w-[120px] pt-1">
                                            {note.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                                        </time>
                                        <div>
                                            <h3 class="text-2xl font-serif font-bold text-white group-hover:text-accent transition-colors leading-snug">
                                                {note.data.title}
                                            </h3>
                                            <p class="mt-3 text-concrete font-mono text-sm leading-relaxed line-clamp-2">
                                                {note.data.description}
                                            </p>
                                            <div class="mt-4 flex gap-2">
                                                {note.data.tags?.map(tag => (
                                                    <span class="text-[10px] font-mono text-accent border border-accent/30 px-2 py-0.5 group-hover:bg-accent group-hover:text-black transition-colors">
                                                        {tag}
                                                    </span>
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </div>
</BaseLayout>