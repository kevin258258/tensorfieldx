---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allNotes = await getCollection('notes');
const sortedNotes = allNotes.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const formula = "S = -k \\sum p_i \\ln p_i";
---

<BaseLayout title="Home">
	
	<section class="min-h-[60vh] flex flex-col justify-center items-center relative p-4 border-b border-white/10">
        
        <div class="absolute top-10 left-10 font-mono text-xs text-acid-green animate-pulse">
            :: SYSTEM_READY
        </div>

		<div class="relative z-10 text-center">
            <div class="text-3xl md:text-5xl lg:text-7xl font-serif text-white/90 mb-8 opacity-80 hover:opacity-100 transition-opacity cursor-help mix-blend-overlay">
                $$ {formula} $$
            </div>
            
            <h1 class="font-serif text-6xl md:text-8xl lg:text-9xl leading-none tracking-tighter mix-blend-difference">
                Tensor<span class="text-acid-green font-normal italic">Field</span>X
            </h1>
		</div>
	</section>


    <section class="border-b border-white/10 bg-void-blue/80 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-12">
            
            <div class="lg:col-span-4 p-8 border-b lg:border-b-0 lg:border-r border-white/10 flex flex-col justify-center">
                <div class="font-mono text-[10px] text-gray-500 mb-4 tracking-widest">
                    // PROFILE
                </div>
                
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-12 h-12 border border-acid-green flex items-center justify-center text-acid-green font-serif italic text-2xl bg-acid-green/10">
                        T
                    </div>
                    <div>
                        <h3 class="text-white font-serif text-xl">Feixiang Tao</h3>
                        <p class="text-acid-green font-mono text-xs">CS Freshman @ SUSTech</p>
                    </div>
                </div>

                <ul class="space-y-2 font-mono text-xs text-gray-400">
                    <li class="flex justify-between">
                        <span>MAJOR:</span>
                        <span class="text-white">Computer Science</span>
                    </li>
                    <li class="flex justify-between">
                        <span>INTERESTS:</span>
                        <span class="text-white">Physics / Math / AI</span>
                    </li>
                </ul>
            </div>

            <div class="lg:col-span-8 p-8 flex flex-col justify-center relative overflow-hidden">
                <div class="absolute top-[-20px] right-[-20px] text-[100px] font-serif text-white/5 pointer-events-none select-none">
                    HELLO
                </div>

                <div class="prose prose-invert max-w-none">
                    <p class="font-serif text-xl md:text-2xl leading-relaxed text-gray-200">
                        "Documenting my undergraduate journey at <span class="text-acid-green border-b border-acid-green/30">SUSTech</span>."
                    </p>
                    <p class="font-mono text-sm text-gray-400 mt-4 leading-loose">
                        Welcome to my personal archive. Here, I record my learning process in Computer Science, Physics, and Mathematics. 
                        This site serves as a repository for my course notes, technical explorations, and project blueprints.
                        Simple, open, and always learning.
                    </p>
                </div>
            </div>

        </div>
    </section>


	<section class="py-20 border-b border-white/10 bg-void-blue/50 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-6">
            
            <div class="font-mono text-xs text-gray-500 mb-8 flex items-center gap-2">
                <span class="w-2 h-2 bg-acid-green rounded-full"></span>
                SELECT MODULE:
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 h-auto md:h-[400px]">
                <a href="/tensorfieldx/notes" class="group md:col-span-2 relative border border-white/20 bg-white/5 p-8 flex flex-col justify-between hover:border-acid-green hover:bg-white/10 transition-all duration-300 overflow-hidden">
                    <span class="absolute right-[-20px] bottom-[-20px] text-[150px] font-serif font-bold text-white/5 group-hover:text-white/10 transition-colors leading-none">N</span>
                    <div>
                        <h3 class="text-3xl font-serif font-bold group-hover:text-acid-green transition-colors">Research Notes</h3>
                        <p class="font-mono text-xs text-gray-400 mt-2 max-w-sm">
                            Documentation of learning processes in Matrix Calculus, Statistical Mechanics, and System Architecture.
                        </p>
                    </div>
                    <div class="flex items-center gap-2 font-mono text-xs text-acid-green mt-8">
                        <span>ACCESS_DB</span>
                        <span class="group-hover:translate-x-2 transition-transform">â†’</span>
                    </div>
                </a>

                <div class="flex flex-col gap-6">
                    <a href="/tensorfieldx/projects" class="group flex-1 relative border border-white/20 bg-white/5 p-6 flex flex-col justify-center hover:border-acid-green hover:bg-white/10 transition-all duration-300">
                        <div class="absolute top-2 right-2 text-[10px] font-mono border border-white/20 px-1 text-gray-500">EXE</div>
                        <h3 class="text-2xl font-serif font-bold mb-1 group-hover:text-acid-green transition-colors">Blueprints</h3>
                        <p class="font-mono text-[10px] text-gray-400">Engineering archives & compiled binaries.</p>
                    </a>

                    <a href="/tensorfieldx/about" class="group flex-1 relative border border-white/20 bg-white/5 p-6 flex flex-col justify-center hover:border-acid-green hover:bg-white/10 transition-all duration-300">
                        <div class="absolute top-2 right-2 text-[10px] font-mono border border-white/20 px-1 text-gray-500">USR</div>
                        <h3 class="text-2xl font-serif font-bold mb-1 group-hover:text-acid-green transition-colors">About Me</h3>
                        <p class="font-mono text-[10px] text-gray-400">Student Profile & Contact</p>
                    </a>
                </div>
            </div>

        </div>
    </section>


	<section class="bg-void-blue py-20">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="font-mono text-xs text-gray-500 mb-8 flex items-center gap-2">
                <span class="w-2 h-2 bg-gray-500 rounded-full"></span>
                RECENT_LOGS:
            </h2>

            <div class="grid grid-cols-12 gap-4 px-4 py-3 border-b border-white/10 text-[10px] font-mono text-gray-500 tracking-widest uppercase">
                <div class="col-span-2 md:col-span-1">ID</div>
                <div class="col-span-3 md:col-span-2">Date</div>
                <div class="col-span-7 md:col-span-6">Subject</div>
                <div class="col-span-2 md:col-span-2 text-right hidden md:block">Tag</div>
                <div class="col-span-1 text-right hidden md:block">Read</div>
            </div>

            <div class="divide-y divide-white/5 border-t border-b border-white/10">
                {sortedNotes.slice(0, 5).map((note, index) => {
                    const hexId = `0x${(sortedNotes.length - index).toString(16).padStart(2, '0').toUpperCase()}`;
                    return (
                        <a href={`/tensorfieldx/notes/${note.slug}`} class="group grid grid-cols-12 gap-4 px-4 py-6 items-baseline hover:bg-white hover:text-black transition-colors duration-200">
                            <div class="col-span-2 md:col-span-1 font-mono text-xs text-gray-600 group-hover:text-black/50">{hexId}</div>
                            <div class="col-span-3 md:col-span-2 font-mono text-xs text-acid-green group-hover:text-black">{note.data.pubDate.toISOString().split('T')[0]}</div>
                            <div class="col-span-7 md:col-span-6">
                                <h3 class="font-serif text-xl font-medium group-hover:font-bold">{note.data.title}</h3>
                            </div>
                            <div class="col-span-2 md:col-span-2 text-right hidden md:block font-mono text-xs text-gray-500 group-hover:text-black/70">[{note.data.tags?.[0]}]</div>
                            <div class="col-span-1 text-right hidden md:block font-mono text-xs text-gray-600 group-hover:text-black/50">~5m</div>
                        </a>
                    )
                })}
            </div>
            
            <div class="mt-12 text-center">
                 <a href="/tensorfieldx/notes" class="inline-block border border-white/20 px-6 py-2 font-mono text-xs text-acid-green hover:bg-acid-green hover:text-black transition-colors">
                    VIEW ALL RECORDS ->
                 </a>
            </div>
        </div>
	</section>

</BaseLayout>