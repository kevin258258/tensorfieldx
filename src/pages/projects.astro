---
import BaseLayout from '../layouts/BaseLayout.astro';

// 这里先手动写几个项目，之后可以像 Notes 一样改成从 Markdown 读取
const projects = [
  {
    title: "vLLM Inference Cluster",
    description: "Configured high-performance LLM serving environment on HPC. Optimized CUDA kernels for reduced latency.",
    tech: ["Python", "CUDA", "HPC"],
    status: "DEPLOYED",
    link: "#"
  },
  {
    title: "CS61C: RISC-V CPU",
    description: "Implemented a 5-stage pipelined CPU in Verilog. Handling hazards and forwarding logic.",
    tech: ["Verilog", "RISC-V", "Logisim"],
    status: "COMPLETED",
    link: "#"
  },
  {
    title: "TensorField Render Engine",
    description: "A physically based renderer written from scratch. Exploring path tracing and global illumination.",
    tech: ["C++", "OpenGL", "Physics"],
    status: "IN_PROGRESS",
    link: "#"
  }
];
---

<BaseLayout title="Projects">
  <header class="mb-12 border-b border-white/10 pb-8">
    <h1 class="text-6xl font-serif mb-4">Projects</h1>
    <p class="text-gray-400 font-mono text-sm">
      // ENGINEERING_ARCHIVE // EXECUTABLES
    </p>
  </header>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {projects.map(project => (
      <div class="group border border-white/20 bg-white/5 p-6 hover:border-acid-green/50 transition-all hover:-translate-y-1">
        
        <div class="flex justify-between items-start mb-4">
          <div class="font-mono text-xs text-acid-green border border-acid-green/30 px-2 py-1">
            {project.status}
          </div>
          <div class="text-gray-600 group-hover:text-acid-green transition-colors">↗</div>
        </div>

        <h3 class="text-2xl font-serif font-bold mb-3 group-hover:text-white transition-colors">
          {project.title}
        </h3>
        
        <p class="text-gray-400 text-sm mb-6 leading-relaxed">
          {project.description}
        </p>

        <div class="flex flex-wrap gap-2 mt-auto">
          {project.tech.map(t => (
            <span class="text-xs font-mono text-gray-500 bg-white/5 px-2 py-1 rounded">
              #{t}
            </span>
          ))}
        </div>

      </div>
    ))}
  </div>
</BaseLayout>