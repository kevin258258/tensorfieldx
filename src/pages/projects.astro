---
import BaseLayout from '../layouts/BaseLayout.astro';

// 空数组：等待真实项目
const projects = [];
---

<BaseLayout title="Projects">
    
    <div class="max-w-7xl mx-auto px-6 py-20 min-h-[60vh] flex flex-col">
        
        <header class="mb-16 border-b border-white/10 pb-8">
            <div class="flex items-center gap-3 mb-4">
                <span class="w-3 h-3 bg-accent"></span>
                <span class="font-mono text-xs font-bold text-accent tracking-widest uppercase">/// Engineering_Dir</span>
            </div>
            <h1 class="text-5xl md:text-7xl font-serif font-bold text-ink tracking-tight">
                Project <span class="italic text-concrete/50">Archives</span>
            </h1>
        </header>

        <div class="flex-1 flex flex-col items-center justify-center border border-white/5 bg-white/[0.02] p-12 text-center">
            
            <div class="mb-6 font-mono text-6xl text-concrete/20 select-none">
                ∅
            </div>
            
            <h3 class="text-xl font-serif text-white mb-2">Repository Empty</h3>
            
            <p class="font-mono text-xs text-concrete max-w-md leading-relaxed mb-8">
                No public engineering archives found at this moment. <br/>
                Actual projects will be deployed here once completed.
            </p>

            <div class="font-mono text-[10px] text-accent border border-accent/30 px-3 py-1 animate-pulse">
                STATUS: LEARNING & BUILDING
            </div>

        </div>

    </div>
</BaseLayout>