---
// src/pages/projects.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// 1. 数据清空：等待真实的工程项目
// 只有当你真正完成了某个项目，再把它加进来
const projects = [];

// 2. 状态颜色映射 (保留，备用)
const getStatusColor = (status) => {
    switch(status) {
        case 'CONFIG': return 'text-purple-400 border-purple-400';
        case 'COURSEWORK': return 'text-blue-400 border-blue-400';
        case 'LEARNING': return 'text-yellow-400 border-yellow-400';
        default: return 'text-white border-white';
    }
};

const sessionID = "NULL_PTR";
---

<BaseLayout title="Project Archives">
    
    <div class="max-w-[98vw] lg:max-w-[1600px] mx-auto px-4 mt-8 lg:mt-16">
        
        <header class="mb-12 border-b border-white/10 pb-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
            <div class="lg:col-span-3 flex flex-col justify-end">
                <span class="font-mono text-xs text-acid-green">:: DIR_SCAN_COMPLETE</span>
                <span class="font-mono text-[10px] text-gray-500">ID: {sessionID}</span>
            </div>
            
            <div class="lg:col-span-6">
                <h1 class="text-4xl md:text-6xl font-serif font-bold text-white leading-none">
                    Project <span class="italic text-gray-500">Archives</span>
                </h1>
                <p class="font-mono text-xs text-gray-500 mt-4">
                    // Engineering & Research Output
                </p>
            </div>

            <div class="lg:col-span-3 flex flex-col justify-end text-right">
                <div class="font-mono text-[10px] text-gray-500 flex flex-col gap-1">
                    <span>ITEMS: 0</span>
                    <span>STATUS: IDLE</span>
                </div>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 relative">
            
            <aside class="hidden lg:block lg:col-span-3 relative">
                <div class="sticky top-32">
                    <div class="mb-8">
                        <h3 class="font-mono text-[10px] text-gray-500 uppercase tracking-widest mb-4 border-b border-white/10 pb-2">
                            // Toolkit
                        </h3>
                        <div class="flex flex-col gap-2 opacity-50">
                            <span class="text-xs font-mono text-gray-600">// No active tools detected</span>
                        </div>
                    </div>

                    <div class="mt-12 p-4 border border-white/10 bg-white/5 font-mono text-[10px] text-gray-500">
                        <div class="mb-2 text-white">SYSTEM_LOG:</div>
                        <div class="opacity-50">
                            > init repository<br/>
                            > waiting for input...<br/>
                            <span class="animate-pulse">_</span>
                        </div>
                    </div>
                </div>
            </aside>

            <main class="lg:col-span-6 flex flex-col gap-4 min-h-screen">
                
                {projects.length > 0 ? (
                    projects.map((project, index) => {
                         // ... (渲染逻辑保留，未来有用)
                    })
                ) : (
                    // 空状态展示：极简、硬核
                    <div class="flex flex-col items-center justify-center h-64 border border-white/5 bg-white/5 mt-8">
                        <div class="text-4xl text-gray-800 mb-4 font-serif italic">∅</div>
                        <div class="font-mono text-xs text-gray-500 uppercase tracking-widest">
                            No Archives Found
                        </div>
                        <div class="font-mono text-[10px] text-gray-600 mt-2">
                            // Repository is currently empty.
                        </div>
                    </div>
                )}

            </main>

            <aside class="hidden lg:block lg:col-span-3 relative">
                <div class="sticky top-32 border-l border-white/10 pl-8">
                     <h3 class="font-mono text-[10px] text-gray-500 uppercase tracking-widest mb-4">
                        // RESOURCE_USAGE
                     </h3>
                     <div class="flex gap-1 h-32 items-end mb-2 opacity-30">
                        {[...Array(8)].map(() => (
                            <div class="w-2 bg-white/10" style={`height: 10%`}></div>
                        ))}
                     </div>
                     <div class="mt-2 text-[10px] font-mono text-gray-600">
                        System Idle...
                     </div>
                </div>
            </aside>

        </div>
    </div>
</BaseLayout>